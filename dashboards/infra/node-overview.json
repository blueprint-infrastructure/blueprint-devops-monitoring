{
  "title": "Node Overview",
  "tags": ["infrastructure", "nodes"],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Node Status",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "up",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "Down",
                    "color": "red"
                  },
                  "1": {
                    "text": "Up",
                    "color": "green"
                  }
                }
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 1,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 9,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "CPU Usage",
            "max": 100,
            "min": 0
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 3,
        "title": "Memory Available",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 9,
          "x": 15,
          "y": 0
        },
        "targets": [
          {
            "expr": "(node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) * 100",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Memory Available",
            "max": 100,
            "min": 0
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 4,
        "title": "Disk Usage",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 18,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "100 - ((node_filesystem_avail_bytes{mountpoint!~\"/tmp|/var/tmp|/run|/sys|/proc|/dev|/boot|/var/lib/docker/overlay.*\"} / node_filesystem_size_bytes{mountpoint!~\"/tmp|/var/tmp|/run|/sys|/proc|/dev|/boot|/var/lib/docker/overlay.*\"}) * 100)",
            "legendFormat": "{{instance}}:{{mountpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Disk Usage",
            "max": 100,
            "min": 0
          },
          {
            "format": "short"
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    }
}
