{
  "title": "Node Overview",
  "tags": ["infrastructure", "nodes"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 2,
  "refresh": "30s",
  "panels": [
    {
      "id": 2,
      "title": "Node Status Table",
      "type": "table",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "min by (instance, chain) (up{chain=~\"$chain\",instance=~\"$instance\",instance!~\"localhost.*\"})",
          "format": "table",
          "instant": true,
          "refId": "A"
        },
        {
          "expr": "avalanche_node_healthy{chain=~\"$chain\",instance=~\"$instance\"} or solana_node_healthy{chain=~\"$chain\",instance=~\"$instance\"} or besu_synchronizer_in_sync{chain=~\"$chain\",instance=~\"$instance\"}",
          "format": "table",
          "instant": true,
          "refId": "B"
        },
        {
          "expr": "(1 - avalanche_c_chain_syncing{chain=~\"$chain\",instance=~\"$instance\"}) or solana_node_synced{chain=~\"$chain\",instance=~\"$instance\"} or besu_synchronizer_in_sync{chain=~\"$chain\",instance=~\"$instance\"}",
          "format": "table",
          "instant": true,
          "refId": "C"
        },
        {
          "expr": "avalanche_c_chain_blocks_behind{chain=~\"$chain\",instance=~\"$instance\"} or solana_node_slots_behind{chain=~\"$chain\",instance=~\"$instance\"} or (ethereum_best_known_block_number{chain=~\"$chain\",instance=~\"$instance\"} - ethereum_blockchain_height{chain=~\"$chain\",instance=~\"$instance\"})",
          "format": "table",
          "instant": true,
          "refId": "D"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto",
            "inspect": false,
            "width": "auto"
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Time"
            },
            "properties": [
              {
                "id": "custom.hidden",
                "value": true
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Status"
            },
            "properties": [
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-background",
                  "mode": "basic"
                }
              },
              {
                "id": "mappings",
                "value": [
                  {
                    "type": "value",
                    "options": {
                      "0": {
                        "text": "Down",
                        "color": "red",
                        "index": 0
                      },
                      "1": {
                        "text": "Up",
                        "color": "green",
                        "index": 1
                      }
                    }
                  }
                ]
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Healthy"
            },
            "properties": [
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-background",
                  "mode": "basic"
                }
              },
              {
                "id": "mappings",
                "value": [
                  {
                    "type": "value",
                    "options": {
                      "0": {
                        "text": "Unhealthy",
                        "color": "red",
                        "index": 0
                      },
                      "1": {
                        "text": "Healthy",
                        "color": "green",
                        "index": 1
                      }
                    }
                  }
                ]
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Synced"
            },
            "properties": [
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-background",
                  "mode": "basic"
                }
              },
              {
                "id": "mappings",
                "value": [
                  {
                    "type": "value",
                    "options": {
                      "0": {
                        "text": "Syncing",
                        "color": "yellow",
                        "index": 0
                      },
                      "1": {
                        "text": "Synced",
                        "color": "green",
                        "index": 1
                      }
                    }
                  }
                ]
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Blocks Behind"
            },
            "properties": [
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-background",
                  "mode": "basic"
                }
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {
                      "value": null,
                      "color": "green"
                    },
                    {
                      "value": 100,
                      "color": "yellow"
                    },
                    {
                      "value": 1000,
                      "color": "red"
                    }
                  ]
                }
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "desc": false,
            "displayName": "instance"
          }
        ],
        "cellHeight": "sm",
        "footer": {
          "show": false,
          "reducer": ["sum"],
          "countRows": true
        }
      },
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "groupBy",
          "options": {
            "fields": {
              "instance": {
                "aggregations": [],
                "operation": "groupby"
              },
              "chain": {
                "aggregations": [],
                "operation": "groupby"
              },
              "Value #A": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "Value #B": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "Value #C": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "Value #D": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              }
            }
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true
            },
            "indexByName": {
              "instance": 0,
              "chain": 1,
              "Value #A (lastNotNull)": 2,
              "Value #B (lastNotNull)": 3,
              "Value #C (lastNotNull)": 4,
              "Value #D (lastNotNull)": 5
            },
            "renameByName": {
              "Value #A (lastNotNull)": "Status",
              "Value #B (lastNotNull)": "Healthy",
              "Value #C (lastNotNull)": "Synced",
              "Value #D (lastNotNull)": "Blocks Behind"
            }
          }
        }
      ]
    },
