      "type": "table",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "min by (instance, chain) (up{chain=~\"$chain\",instance=~\"$instance\",instance!~\"localhost.*\"})",
          "format": "table",
          "instant": true,
          "refId": "A"
        },
        {
          "expr": "avalanche_node_healthy{chain=~\"$chain\",instance=~\"$instance\"} or solana_node_healthy{chain=~\"$chain\",instance=~\"$instance\"} or algorand_node_healthy{chain=~\"$chain\",instance=~\"$instance\"} or (besu_synchronizer_in_sync{chain=~\"$chain\",instance=~\"$instance\"} == 1 and on(chain) (1 - beacon_node_syncing_active{chain=~\"$chain\"}) and on(chain) (validator_local_validator_counts{chain=~\"$chain\",status=\"active_ongoing\"} > 0))",
          "format": "table",
          "instant": true,
          "refId": "B"
        },
        {
          "expr": "(1 - avalanche_c_chain_syncing{chain=~\"$chain\",instance=~\"$instance\"}) or solana_node_synced{chain=~\"$chain\",instance=~\"$instance\"} or algorand_node_synced{chain=~\"$chain\",instance=~\"$instance\"} or (besu_synchronizer_in_sync{chain=~\"$chain\",instance=~\"$instance\"} == 1 and on(chain) (1 - beacon_node_syncing_active{chain=~\"$chain\"}) and on(chain) (validator_local_validator_counts{chain=~\"$chain\",status=\"active_ongoing\"} > 0))",
          "format": "table",
          "instant": true,
          "refId": "C"
        },
        {
          "expr": "label_replace(solana_node_version_info{chain=~\"$chain\",instance=~\"$instance\"}, \"node_version\", \"$1\", \"version\", \"(.*)\") or label_replace(algorand_node_version_info{chain=~\"$chain\",instance=~\"$instance\"}, \"node_version\", \"$1\", \"version\", \"(.*)\") or label_replace(avalanche_node_version_info{chain=~\"$chain\",instance=~\"$instance\"}, \"node_version\", \"$1\", \"version\", \"(.*)\") or label_replace(beacon_teku_version_total{chain=~\"$chain\",instance=~\"$instance\"}, \"node_version\", \"$1\", \"version\", \"(.*)\")",
          "format": "table",
          "instant": true,
          "refId": "D"
        },
        {
          "expr": "label_replace(avalanche_latest_version_info{chain=~\"$chain\",instance=~\"$instance\"}, \"latest_version\", \"$1\", \"version\", \"(.*)\")",
          "format": "table",
          "instant": true,
          "refId": "E"
        },
        {
          "expr": "ethereum_peer_count{chain=~\"$chain\",instance=~\"$instance\"} or besu_peers_connected_total{chain=~\"$chain\",instance=~\"$instance\"} or avalanche_network_peers{chain=~\"$chain\",instance=~\"$instance\"} or solana_network_peers{chain=~\"$chain\",instance=~\"$instance\"}",
          "format": "table",
          "instant": true,
          "refId": "F"
        },
        {
          "expr": "ethereum_blockchain_height{chain=~\"$chain\",instance=~\"$instance\"} or avalanche_c_chain_block_height{chain=~\"$chain\",instance=~\"$instance\"} or solana_node_block_height{chain=~\"$chain\",instance=~\"$instance\"} or algorand_node_last_round{chain=~\"$chain\",instance=~\"$instance\"}",
          "format": "table",
          "instant": true,
          "refId": "G"
        },
        {
          "expr": "beacon_current_epoch{chain=~\"$chain\",instance=~\"$instance\"} or solana_node_epoch{chain=~\"$chain\",instance=~\"$instance\"}",
          "format": "table",
          "instant": true,
          "refId": "H"
        },
        {
          "expr": "solana_validator_activated_stake_lamports{chain=~\"$chain\",instance=~\"$instance\"} / 1e9 or avalanche_platformvm_local_staked{chain=~\"$chain\",instance=~\"$instance\"} / 1e9 or validator_local_validator_balances{chain=~\"$chain\",instance=~\"$instance\"} / 1e9",
          "format": "table",
          "instant": true,
          "refId": "I"
        },
        {
          "expr": "max(avalanche_network_block_height{chain=\"avalanche\"}) * on() group_right() (avalanche_network_block_height{chain=~\"$chain\",instance=~\"$instance\"} * 0 + 1) or solana_network_block_height{chain=~\"$chain\",instance=~\"$instance\"}",
          "format": "table",
          "instant": true,
          "refId": "J"
        }
      ],
